
@{
    ViewData["Title"] = "Profil du compte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model LaVictoireDesServicesHelpDeskApp.Models.ViewModels.TicketViewModel 

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>
                    Envoyer Ticket   
                </h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li><a asp-controller="dashboard" asp-action="index">Home</a></li>
                    <li><a href="#">Envoyer Ticket</a></li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
        <div class="row">
           
            <div class="col-md-12">
                @if (TempData["msg"] != null)
                {
                    if (TempData["msg"] == "Done")
                    {
                        <div class="callout callout-success">
                            <h4>Réussi</h4>
                        </div>
                    }
                    else
                    {
                        <div class="callout callout-danger">
                            <h4>Manqué</h4>
                        </div>
                    }

                }

                <div class="card card-primary">
                    <form asp-controller="ticket" asp-action="envoyer" method="post">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="username">Titre</label>
                                <input type="text" class="form-control" id="username" required="required"
                                       asp-for="Ticket.Title">
                            </div>
                            <div class="form-group">
                                <label for="password">Description</label>
                                <textarea class="form-control" asp-for="Ticket.Description" required="required"></textarea>
                            </div>

                            <div class="form-group">
                                <label>Statut</label>
                                <select class="form-control" asp-for="Ticket.StatutId" asp-items="@Model.Statutes"></select>
                            </div>

                            <div class="form-group">
                                <label>Categorie</label>
                                <select class="form-control" asp-for="Ticket.CategorieId" asp-items="@Model.Categories"></select>
                            </div>

                            <div class="form-group">
                                <label>Periode</label>
                                <select class="form-control" asp-for="Ticket.PeriodeId" asp-items="@Model.Periodes"></select>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Sauvegarder</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</section>
